<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hehe.calculator.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c7c7c7"
                android:paddingTop="20dp"
                android:text="0"
                android:textColor="#0F0F0F"
                android:textSize="30dp"
                android:textAlignment="textEnd"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c7c7c7"
                android:text="0"
                android:textColor="#fffefe"
                android:textSize="50sp"
                android:textAlignment="textEnd"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#545353"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_weight="0.2">

        <ImageButton
            android:id="@+id/imageButtonreset"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_reset"
            android:background="#545353"
            />

        <ImageButton
            android:id="@+id/imageButtonchangsign"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_changesign"
            android:layout_weight="1"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButtonpercent"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_percent"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButtondivide"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_divide"
            android:layout_weight="1"
            android:background="#545353"/>
        </TableRow>

        <TableRow
            android:layout_weight="0.2">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_7"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_8"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_9"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButtontimes"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_times"
            android:background="#545353"/>
        </TableRow>

        <TableRow
            android:layout_weight="0.2">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_4"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_5"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_6"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButtonminus"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_minus"
            android:background="#545353"/>
        </TableRow>

        <TableRow
           android:layout_weight="0.2">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_1"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_2"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_3"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButtonplus"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_plus"
            android:background="#545353"/>
        </TableRow>

        <TableRow
            android:layout_weight="0.2">

        <ImageButton
            android:id="@+id/imageButton0"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_0"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButtonpoint"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_point"
            android:background="#545353"/>

        <ImageButton
            android:id="@+id/imageButtonequals"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/calculator_equals"
            android:background="#545353"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
